<div class="modal" tabindex="-1" role="dialog" id="modal-name">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= @task.title %>
         <p class="card-text"><small class="text-muted">Actualizado hace  <%= distance_of_time_in_words(@task.updated_at, Time.current)%> </small></p>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      	<div class="container">
      		<p><%= @task.description %></p>
      		<div id="comments" style="margin-bottom: 20px;">
            <h5>Comentarios</h5>
      		<% @task.comments.each do |comment| %>
	      		<%= render "comments/comment", comment: comment %>
      		<% end %>
      		</div>
	      		<%= form_for [@task, @task.comments.build], remote: true do |f| %>
              <div class="form-group">  
                <%= f.label :text, "Nuevo Comentario" %>    			
      					<%= f.text_area :text, row: "4", class: "form-control" %>
              </div>
    					<%= f.submit "Comentar", class: "btn btn-success" %>
	      		<% end %>
      		      		
      		<p class="card-text"><small class="text-muted">Tarea creada el <%= @task.created_at.to_date %> </small></p>
      	</div>        
      </div>      
			
      <div class="modal-footer">
        
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>