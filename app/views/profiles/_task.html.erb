<table class="table table-hover table-striped">	
  <thead>
	<tr>
		<th colspan="4">
			<%= link_to 'Nueva Tarea', new_task_path, class: "btn btn-secondary", remote: true %>
		</th>				  			
	</tr>		
  </thead>				  	  
  <tbody class="tasks">
  	<% current_user.tasks.each do |task| %>
  		<%= render "tasks/table", task: task%>	
  	<% end %>				  	    
  </tbody>
</table>